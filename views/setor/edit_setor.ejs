<%- include("../partes/header.ejs") %>

<body>
<%- include("../partes/navebar.ejs") %>
<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-11">
                    <h3 class="">Editar Setor</h3>
                </div>
                <div class="col-1">
                    <a href="/setor" class="btn btn-primary">Voltar</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <form method="post" action="/setor/update">
                <div class="form-group">
                    <label>Nome do Setor</label>
                    <input type="hidden" name="id" value="<%= setor.id %>">
                    <input type="text" name="setor_nome" value="<%= setor.setor_nome %>" class="form-control" placeholder="Nome Do Setor">
                </div>
                <br>
                <button type="submit" class="btn btn-primary">Atualizar</button>
            </form>
        </div>
    </div>
</div>
</body>
